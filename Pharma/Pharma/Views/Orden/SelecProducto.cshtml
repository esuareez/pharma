@model IEnumerable<Pharma.Models.Producto>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
    int oc = int.Parse(Context.Request.Cookies["idOC"]);
}

<div id="main-content container-fluid">
                <div class="page-heading">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-12 col-md-6 order-md-1 order-last">
                                <h3>Productos</h3>
                                <p class="text-subtitle text-muted">Ver, modificar, eliminar productos.</p>
                                 <a asp-controller="Producto" asp-action="Create" class="btn btn-success">Crear producto</a>
                                 <br>
                            </div>
                            <div class="col-12 col-md-6 order-md-2 order-first">
                                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Products</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>
                @if (Model.Count() > 0)
                {
                <section class="section">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped" id="table1">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Tipo</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <form method="post" asp-action="Cart" asp-controller="Orden">

                                    
                                    @foreach (var item in Model)
                                    {
                                        @*<input type="hidden" name="id" value=@oc>
                                        <input type="hidden" name="idprod" value=@item.Id>*@
                                        <tr>
                                                
                                                <td>@item.Nombre</td>
                                                <td>@item.TipoProducto</td>
                                                <td>@item.PrecioVenta</td>
                                                <td><input name="Cantidad" type="number" min="1" value="1"></td>
                                                <td>
                                                    <a class="btn btn-success" asp-controller="Orden" asp-action="Cart" asp-route-id=@oc asp-route-idp="@item.Id" asp-route-cantidad="Cantidad"><i class="fa-solid fa-pen-to-square"></i></a>
                                                    @*<a class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>*@
                                                </td>
                                        </tr>
                                    }
                                    </form>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </section>
        
           }else{
                <p>No existen registros de productos.</p>
            }
            </div>
</div>
        
    
        <script src="~/css/css-emp/vendors/simple-datatables/simple-datatables.js"></script>
        <script>
            // Simple Datatable
            let table1 = document.querySelector('#table1');
            let dataTable = new simpleDatatables.DataTable(table1);
        </script>

