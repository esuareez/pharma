@model IEnumerable<Pharma.Models.Empleado>
@{
    ViewData["Title"] = "Employee";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

<div class="page-heading container">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-12 col-md-6 order-md-1 order-last">
                                <h3>Empleados</h3>
                                <p class="text-subtitle text-muted">Crea, modifica y elimina empleados.</p>
                                <a class="btn btn-success" asp-controller="Empleado" asp-action="Create">Crear empleado</a>
                            </div>
                            <div class="col-12 col-md-6 order-md-2 order-first">
                                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Empleados</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>

                    <br>

                    
        @if (Model.Count() > 0)
        {
            <section class="section">
            <table class="table text-center">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Cédula</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Apellido</th>
                    <th scope="col">Rol</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                            <td>@item.IdEmpleado</td>
                            <td>@item.Cedula</td>
                            <td>@item.Nombre</td>
                            <td>@item.Apellido</td>
                            <td>@item.Puesto</td>
                            <td>
                                <a class="btn btn-success" asp-controller="Empleado" asp-action="EditProfile"
                                asp-route-id=@item.IdEmpleado><i class="fa-solid fa-pen-to-square"></i></a>
                                <a class="btn btn-danger" asp-controller="Empleado" asp-action="Delete"
                                asp-route-id=@item.IdEmpleado><i class="fa-solid fa-trash-can"></i></a>
                                @Html.ActionLink("Empleado","DeleteEmpleado",new{id=@item.IdEmpleado})
                            </td>
                   </tr>
                }
            </tbody>
            </table>
            </section>
        }else{
                <p>No existen registros de empleados.</p>
        }
 </div>

