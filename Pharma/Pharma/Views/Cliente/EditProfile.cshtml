@model Pharma.Models.Cliente;
@{
    ViewData["Title"] = "EditProfile";
    Layout = "~/Views/Shared/layout.cshtml";
    

}

<body>
    <!--Edit Profile-->
	<script src="https://code.jquery.com/jquery-1.10.2.min.js"></script>
    @*<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.bundle.min.js"></script>*@

    <div class="hero-area" style = "background-image: url(/img/editprofile/editpr.jpg)">
		<div class="container">
			<div class="row">
				<div class="col-lg-9 offset-lg-2 text-center">
					<div class="hero-text">
						<div class="hero-text-tablecell">
							<h1>Detalles de la cuenta</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
<div class="container">
        
    <br>
    <br>
    
        <div class="mx-auto" >
            <!-- Account details card-->
            <div class="card mb-4">
                <div class="card-header">Datos del perfíl</div>
                <div class="card-body">
                    <form method="post" asp-action="EditProfile">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="Password" />
                    <!-- Form Group (Cedula)-->
                        <div class="mb-3">
                            <label class="small mb-1">Cédula</label>
                            <input class="form-control" id="typetext" type="text" asp-for="Cedula" name="Cedula">
                        </div>
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (first name)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Nombre</label>
                                <input class="form-control" id="typetext" type="text" asp-for="Nombre" name="Nombre">
                            </div>
                            <!-- Form Group (last name)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Apellido</label>
                                <input class="form-control" id="typetext" type="text" asp-for="Apellido" name="Apellido">
                            </div>
                        </div>
                        <!-- Form Row        -->
                        <!-- Form Group (Direccion)-->
                        <div class="mb-3">
                            <label class="small mb-1">Dirección</label>
                            <input class="form-control" id="typetext" type="text" asp-for="Direccion" name="Direccion">
                        </div>
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Ciudad)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Ciudad</label>
                                <input class="form-control" id="typetext" type="text" asp-for="Ciudad" name="Ciudad">
                            </div>
                            <!-- Form Group (CD Postal)-->
                            <div class="col-md-6">
                                <label class="small mb-1" for="inputLocation">Código Postal</label>
                                <input class="form-control" id="inputLocation" type="number" asp-for="CodPostal" name="CodPostal">
                            </div>
                        </div>
                        
                        <!-- Form Row-->
                        <div class="row gx-3 mb-3">
                            <!-- Form Group (Telefono)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Teléfono</label>
                                <input class="form-control" id="inputPhone" type="tel" asp-for="Telefono" name="Telefono">
                            </div>
                            <!-- Form Group (Correo)-->
                            <div class="col-md-6">
                                <label class="small mb-1">Correo</label>
                                <input class="form-control" id="typetext" type="email" asp-for="Correo" name="Correo">
                            </div>
                        </div>
                        <!-- Save changes button-->
                        <button class="btn btn-primary" type="submit">Guardar cambios</button>
                        <button class="btn btn-danger" asp-controller="Cliente" asp-action="DeleteCliente" asp-route-id=@int.Parse(Context.Request.Cookies["userId"])>Desactivar cuenta</button>
                        
                    </form>
                        
                    
                </div>
            </div>
        </div>
        <!-- Payment methods card-->
    <div class="card card-header-actions mb-4">
        <div class="card-header">
            Payment Methods
            <button class="btn btn-sm btn-primary" type="button">Add Payment Method</button>
        </div>
        <div class="card-body px-0">
            <!-- Payment method 1-->
            <div class="d-flex align-items-center justify-content-between px-4">
                <div class="d-flex align-items-center">
                     <i class="fab fa-cc-visa fa-2x cc-color-visa"></i>
                    <div class="ms-4">
                        <div class="small">Visa ending in 1234</div>
                        <div class="text-xs text-muted">Expires 04/2024</div>
                    </div>
                </div>
                <div class="ms-4 small">
                    <div class="badge bg-light text-dark me-3">Default</div>
                    <a href="#!">Edit</a>
                </div>
            </div>
            <hr>
            <!-- Payment method 2-->
            <div class="d-flex align-items-center justify-content-between px-4">
                <div class="d-flex align-items-center">
                    <i class="fab fa-cc-mastercard fa-2x cc-color-mastercard"></i>
                    <div class="ms-4">
                        <div class="small">Mastercard ending in 5678</div>
                        <div class="text-xs text-muted">Expires 05/2022</div>
                    </div>
                </div>
                <div class="ms-4 small">
                    <a class="text-muted me-3" href="#!">Make Default</a>
                    <a href="#!">Edit</a>
                </div>
            </div>
            <hr>
            <!-- Payment method 3-->
            <div class="d-flex align-items-center justify-content-between px-4">
                <div class="d-flex align-items-center">
                    <i class="fab fa-cc-amex fa-2x cc-color-amex"></i>
                    <div class="ms-4">
                        <div class="small">American Express ending in 9012</div>
                        <div class="text-xs text-muted">Expires 01/2026</div>
                    </div>
                </div>
                <div class="ms-4 small">
                    <a class="text-muted me-3" href="#!">Make Default</a>
                    <a href="#!">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>



