			<div class="row product-lists">
			@if (Model.Count() > 0)
            {
				@foreach(var item in Model)
				{
					@if(item.Estado == 1)
					{
						<div class="col-lg-4 col-md-6 text-center">
						<div class="single-product-item">
							<div class="product-image">
								<img src="data:image/*;base64,@Convert.ToBase64String(item.Img)" height="200px" alt="">
							</div>
							<h3>@item.Nombre</h3>
							<p class="product-price">RD$ @item.PrecioVenta</p>
							@if(item.Laboratorio != null)
							{
								<p class="product-price">@item.Laboratorio</p>
							}
							<a class="cart-btn" asp-controller="Producto" asp-action="addCart" asp-route-id=@item.Id><i class="fas fa-shopping-cart"></i> Añadir al carrito</a>
						</div>
						</div>
					}
					
				}
			}
			else
			{
				<!-- error section -->
				<div class="full-height-section error-section">
					<div class="full-height-tablecell">
						<div class="container">
							<div class="row">
								<div class="col-lg-8 offset-lg-2 text-center">
									<div class="error-text">
										<i class="far fa-sad-cry"></i>
										<h1>Oops! Not Found.</h1>
										<p>The page you requested for is not found.</p>
										<a href="index.html" class="boxed-btn">Back to Home</a>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				<!-- end error section -->
			}
