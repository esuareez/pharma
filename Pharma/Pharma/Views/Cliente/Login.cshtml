@model Pharma.Models.Cliente

@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/stylecl.css"/>
    <title>Cliente</title>

</head>
<body >
    <div class="container" id="container">
        <div class="form-container sign-up-container">
            <form method="post" asp-action="Create">
                <h1>Crear cuenta</h1>
               @*<div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>*@
                <input required type="text" placeholder="Nombre" name="Nombre" />
                <input required type="text" placeholder="Apellido" name="Apellido" />
                <input required type="text" placeholder="Cédula" name="Cedula" />
                <input required type="email" placeholder="Correo" name="Correo" />
                <input required type="password" placeholder="Contraseña" name="Password" />
                <button style="margin-top: 5%" type="submit">Registrar</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form method="post" asp-action="Login">
                <h1>Sign in</h1>
                @*<div class="social-container">
                    <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                    <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                    <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                </div>*@

                <input required type="text" placeholder="Cédula/Correo" name="Cedula"/>
                <input required type="password" placeholder="Contraseña" name="Password"/>
                <a asp-controller="Cliente" asp-action="ChangePassword">¿Olvidaste tu contraseña?</a>
                <button type="submit">Iniciar sesión</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>Welcome Back!</h1>
                    <p>To keep connected with us please login with your personal info</p>
                    <button class="ghost" id="signIn">Sign In</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>Hello, Friend!</h1>
                    <p>Enter your personal details and start journey with us</p>
                    <button class="ghost" id="signUp">Sign Up</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/login.js">

    </script>
</body>
</html>



