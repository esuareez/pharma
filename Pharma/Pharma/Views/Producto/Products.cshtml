@model IEnumerable<Pharma.Models.Producto>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
    bool exist = false;
    int i = 0;
}

<div id="main-content container-fluid">
                <div class="page-heading">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-12 col-md-6 order-md-1 order-last">
                                <h3>Productos</h3>
                                <p class="text-subtitle text-muted">Ver, modificar, eliminar productos.</p>
                                 <a asp-controller="Producto" asp-action="Create" class="btn btn-success">Crear producto</a>
                                 <br>
                            </div>
                        </div>
                    </div>
                @if (Model.Count() > 0)
                {
                <section class="section">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped" id="table1">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Tipo</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th>ITBIS</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    @if (item.Estado != 3)
                                    {
                                        <tr>
                                            <td>@item.Nombre</td>
                                            <td>@item.TipoProducto</td>
                                            <td>RD$ @item.PrecioVenta</td>
                                            <td>@item.Cantidad</td>
                                            @if (item.Itbis > 0)
                                            {
                                                <td>Apto</td>
                                            }
                                            else
                                            {
                                                <td>No Apto</td>
                                            }
                                            <td>
                                                <a class="btn btn-success" asp-controller="Producto" asp-action="Edit" asp-route-id=@item.Id><i class="fa-solid fa-pen-to-square"></i></a>
                                                <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#danger" onclick="pass(@item.Id)"><i class="fa-solid fa-trash-can"></i></a> 
                                            </td>
                                        </tr>
                                    }
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-danger me-1 mb-1 d-inline-block">

                    <!--Danger theme Modal -->
                    <div class="modal fade text-left" id="danger" tabindex="-1"
                        role="dialog" aria-labelledby="myModalLabel120"
                        aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
                            role="document">
                            <div class="modal-content">
                            <div class="modal-header bg-danger">
                                <h5 class="modal-title white" id="myModalLabel120">
                                    Alerta
                                </h5>
                                <button type="button" class="close"
                                    data-bs-dismiss="modal" aria-label="Close">
                                    <i data-feather="x"></i>
                                </button>
                            </div>
                            <div class="modal-body">
                                ¿Estás seguro de eliminar este producto?
                            </div>
                            <input hidden id="id">
                            <div class="modal-footer">
                                <button type="button"
                                    class="btn btn-light-secondary"
                                    data-bs-dismiss="modal">
                                    <i class="bx bx-x d-block d-sm-none"></i>
                                    <span class="d-none d-sm-block">Cancelar</span>
                                </button>
                                <a  onclick="remove()" class="btn btn-danger ml-1"
                                    data-bs-dismiss="modal">
                                    <i class="bx bx-check d-block d-sm-none"></i>
                                    <span class="d-none d-sm-block">Aceptar</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

                </section>
        
           }else{
                <p>No existen registros de productos.</p>
            }
            </div>
</div>
        <script>
            function pass(id) {
                $('#id').val(id);
            }

            function remove(){
                console.log("funciono");
                var id = $('#id').val();
                var url = '@Url.Action("Remove", "Producto")';
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { id: id},
                    success: function () {
                        console.log("me tiene jalto");
                        location.reload();
                    }
                })
            }
        </script>
    
        <script src="~/css/css-emp/vendors/simple-datatables/simple-datatables.js"></script>
        <script>
            // Simple Datatable
            let table1 = document.querySelector('#table1');
            let dataTable = new simpleDatatables.DataTable(table1);
        </script>

