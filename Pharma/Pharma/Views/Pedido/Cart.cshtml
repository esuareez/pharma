@model IEnumerable<Pharma.Models.PedidoProducto>
@{
	ViewData["Title"] = "Cart";
	Layout = "~/Views/Shared/layout.cshtml";
	double total = 0;
	int[] pedido;
}

<!-- breadcrumb-section -->
	<div class="breadcrumb-section breadcrumb-bg">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 offset-lg-2 text-center">
					<div class="breadcrumb-text">
						<p>Fresh and Organic</p>
						<h1>Cart</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- end breadcrumb section -->

	<!-- cart -->
@if (Model.Count() > 0)
{
	<div class="cart-section mt-150 mb-150">
		<div class="container">

			<div class="row">
				<div class="col-lg-8 col-md-12">
					<div class="cart-table-wrap">

						<table class="cart-table">
							<thead class="cart-table-head">
								<tr class="table-head-row">
									<th class="product-remove"></th>
									<th class="product-image">Imagen</th>
									<th class="product-name">Nombre</th>
									<th class="product-price">Precio</th>
									<th class="product-quantity">Cantidad</th>
									<th class="product-total">Disponibilidad</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									@if(item.IdpedidoNavigation.IdCliente == int.Parse(Context.Request.Cookies["userId"]))
									{
										<tr class="table-body-row">
										<td class="product-remove"><a asp-controller="Pedido" asp-action="Remove" asp-route-id="@item.IdproductoNavigation.Id"><i class="far fa-window-close"></i></a></td>
										<td class="product-image"><img src="data:image/*;base64,@Convert.ToBase64String(item.IdproductoNavigation.Img)" width="60px" alt=""></td>
										<td class="product-name">@item.IdproductoNavigation.Nombre</td>
										<td class="product-price">@item.IdproductoNavigation.PrecioVenta</td>
										<td class="product-quantity"><input id="cantidad" name="cantidad[]" type="number" min="1" max=@item.IdproductoNavigation.Cantidad value=@item.Cantidad></td>
										<td class="product-total">@item.IdproductoNavigation.Cantidad</td>
										</tr>
										<input hidden name="idproducto[]" value="@item.Idproducto"/>
									}
									
									@*@total += (@item.Cantidad * @item.IdproductoNavigation.PrecioVenta);*@
								}
								
							</tbody>
						</table>

					</div>
				</div>

				<div class="col-lg-4">
					<div class="total-section">
						<table class="total-table">
							<thead class="total-table-head">
								<tr class="table-total-row">
									<th>Total</th>
									<th>Price</th>
								</tr>
							</thead>
							<tbody>
								<tr class="total-data">
									<td><strong>Subtotal: </strong></td>
									<td>RD$ @total</td>
								</tr>
								<tr class="total-data">
									<td><strong>Shipping: </strong></td>
									<td>RD$ 0</td>
								</tr>
								<tr class="total-data">
									<td><strong>Total: </strong></td>
									<td>RD$ @total</td>
								</tr>
							</tbody>
						</table>
						<div class="cart-buttons">
							<a onclick="Update()" class="boxed-btn">Update Cart</a>
							<a href="checkout.html" class="boxed-btn black">Check Out</a>
							<br>
							<a asp-controller="Cliente" asp-action="Shop" class="boxed-btn black">Seguir comprando</a>
						</div>
					</div>

				</div>
			</div>
		</div>
	</div>


}



<script>
    var Update = function () {
		console.log("funciono");
		var cant = $('input[name^="cantidad[]"]'); 
		var idproducto = $('input[name^="idproducto[]"]');
         var url = '@Url.Action("Update", "Pedido")';
        $.ajax({
            type: "POST",
            url: url,
            data: { cantidad: cant, idproducto: idproducto },
            success: function (result) {
                console.log("funciono");
            }
        })
    }
</script>
<!-- end cart -->

