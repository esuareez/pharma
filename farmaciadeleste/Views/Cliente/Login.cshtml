@model Pharma.Models.Cliente

@{
    ViewData["Title"] = "Login";
    Layout = null;
    string reg = ViewBag.data;
    Console.WriteLine("DATA: " + reg);
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/stylecl.css"/>
    <link rel="icon" type="image/svg" href="~/img/favicon.png"/>
    <title>Cliente</title>

</head>
<body >
    <div class="container @reg" id="container">
        <div class="form-container sign-up-container">
            <form method="post" asp-action="Create">
                <h1>Crear cuenta</h1>
                <input required type="text" placeholder="Nombre" name="Nombre" />
                <input required type="text" placeholder="Apellido" name="Apellido" />
                <input required type="text" placeholder="Cédula" name="Cedula" />
                <input required type="email" placeholder="Correo" name="Correo" />
                <input required type="password" placeholder="Contraseña" name="Password" />
                <button style="margin-top: 5%" type="submit">Registrar</button>
            </form>
        </div>
        <div class="form-container sign-in-container">
            <form method="post" asp-action="Login">
                <h1>Inicia sesión</h1>
                <br />
                <input required type="text" placeholder="Cédula/Correo" name="Cedula"/>
                <input required type="password" placeholder="Contraseña" name="Password"/>
                <br />
                @*<a asp-controller="Cliente" asp-action="ChangePassword">¿Olvidaste tu contraseña?</a>*@
                <button type="submit">Iniciar sesión</button>
            </form>
        </div>
        <div class="overlay-container">
            <div class="overlay">
                <div class="overlay-panel overlay-left">
                    <h1>¡Bienvenido nuevamente!</h1>
                    <p>Para mantenerte conectado con nosotros inicia sesión.</p>
                    <button class="ghost" id="signIn">Iniciar sesión</button>
                </div>
                <div class="overlay-panel overlay-right">
                    <h1>¡Hola, amigo!</h1>
                    <p>Ingresa tu información personal para unirte a nosotros.</p>
                    <button class="ghost" id="signUp">Registrarse</button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/js/login.js">

    </script>
</body>
</html>



