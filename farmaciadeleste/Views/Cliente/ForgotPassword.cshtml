
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- MDB -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.css" rel="stylesheet" />
    <title>Eliam</title>
</head>

<body>

    <div class="container">
        <div class="d-flex align-items-center justify-content-center" style="margin-top: 20%;">
            <div class="card shadow-3-strong" style="width: 40%;">
                <div class="card-body text-center">
                    <h5 class="card-title">Cambiar contraseña</h5>
                    <form class="row g-3 needs-validation" novalidate>
                        <div class="d-flex justify-content-center">
                            <div class="col-8 form-outline">
                                <input type="text" class="form-control" id="validationCustom05" required />
                                <label for="validationCustom05" class="form-label">Cedula</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="col-8 form-outline">
                                <input type="text" class="form-control" id="validationCustom05" required />
                                <label for="validationCustom05" class="form-label">Nueva contraseña</label>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="col-8 form-outline">
                                <input type="text" class="form-control" id="validationCustom05" required />
                                <label for="validationCustom05" class="form-label">Repetir contraseña</label>
                            </div>
                        </div>
                        <div class="col-12 text-center">
                            <button class="btn btn-primary" type="submit">Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- MDB -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.10.2/mdb.min.js"></script>
</body>

</html>
