@model IEnumerable<Pharma.Models.OrdenCompra>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
}

<div id="main-content container-fluid">
                <div class="page-heading">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-12 col-md-6 order-md-1 order-last">
                                <h3>Ordenes de compra</h3>
                                <p class="text-subtitle text-muted">Ver, modificar, eliminar las ordenes de compra.</p>
                                 <a asp-controller="Orden" asp-action="SelecProveedor" class="btn btn-success">Crear orden</a>
                                 <br>
                            </div>
                            
                        </div>
                    </div>
                @if (Model.Count() > 0)
                {
                <section class="section">
                    <div class="card">
                        <div class="card-body">
                            <table class="table table-striped" id="table1">
                                <thead>
                                    <tr>
                                        <th>Proveedor</th>
                                        <th>Fecha</th>
                                        <th>Monto a pagar</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    @if(item.Estado > 0)
                                    {
                                        <tr>
                                                <td>@item.IdProveedorNavigation.Nombre</td>
                                                <td>@String.Format("{0:dd/MM/yyyy}", item.Fecha)</td>
                                                <td>RD$ @item.MontoPagar</td>
                                                @if(item.Estado == 1)
                                                {
                                                <td><span class="badge bg-warning">En proceso</span></td>
                                                }
                                                @if(item.Estado == 2)
                                                {
                                                <td><span class="badge bg-success">Entregada</span></td>
                                                }
                                                <td>
                                                @if(item.Estado != 2)
                                                {
                                                    <a class="btn btn-success" asp-controller="Orden" asp-action="Complete" asp-route-id=@item.IdOrComp><i class="fa-solid fa-check"></i></a>
                                                    <a class="btn btn-warning" asp-controller="Orden" asp-action="EOrden" asp-route-id=@item.IdOrComp><i class="fa-solid fa-pen-to-square"></i></a>
                                                    <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#danger" onclick="pass(@item.IdOrComp)"><i class="fa-solid fa-trash-can"></i></a> 
                                                }
                                                @if(item.Estado == 2)
                                                {
                                                    <a class="btn btn-dark" asp-controller="Orden" asp-action="View" asp-route-id=@item.IdOrComp><i class="fa-solid fa-eye"></i></a>
                                                }
                                                
                                                </td>
                                        </tr>
                                    }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-danger me-1 mb-1 d-inline-block">

                    <!--Danger theme Modal -->
                    <div class="modal fade text-left" id="danger" tabindex="-1"
                        role="dialog" aria-labelledby="myModalLabel120"
                        aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable"
                            role="document">
                            <div class="modal-content">
                            <div class="modal-header bg-danger">
                                <h5 class="modal-title white" id="myModalLabel120">
                                    Alerta
                                </h5>
                                <button type="button" class="close"
                                    data-bs-dismiss="modal" aria-label="Close">
                                    <i data-feather="x"></i>
                                </button>
                            </div>
                            <div class="modal-body">
                                ¿Estás seguro de cancelar esta Orden de Compra?
                            </div>
                            <input hidden id="id">
                            <div class="modal-footer">
                                <button type="button"
                                    class="btn btn-light-secondary"
                                    data-bs-dismiss="modal">
                                    <i class="bx bx-x d-block d-sm-none"></i>
                                    <span class="d-none d-sm-block">Cancelar</span>
                                </button>
                                <a  onclick="remove()" class="btn btn-danger ml-1"
                                    data-bs-dismiss="modal">
                                    <i class="bx bx-check d-block d-sm-none"></i>
                                    <span class="d-none d-sm-block">Aceptar</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                </section>
        
           }else{
                <br><p>No existen registros de una orden de compra.</p>
            }
            </div>
</div>
        
    <script>
            function pass(id) {
                $('#id').val(id);
            }

            function remove(){
                console.log("funciono");
                var id = $('#id').val();
                var url = '@Url.Action("RemoveOC", "Orden")';
                $.ajax({
                    type: "POST",
                    url: url,
                    data: { id: id},
                    success: function () {
                        console.log("me tiene jalto");
                        location.reload();
                    }
                })
            }
        </script>
        <script src="~/css/css-emp/vendors/simple-datatables/simple-datatables.js"></script>
        <script>
            // Simple Datatable
            let table1 = document.querySelector('#table1');
            let dataTable = new simpleDatatables.DataTable(table1);
        </script>

