@model IEnumerable<Pharma.Models.OrdenProducto>
@{
    ViewData["Title"] = "Products";
    Layout = "~/Views/Shared/layoutAdmin.cshtml";
    int oc = int.Parse(Context.Request.Cookies["idOC"]);
}

<div id="main-content container-fluid">
                <div class="page-heading">
                    <div class="page-title">
                        <div class="row">
                            <div class="col-12 col-md-6 order-md-1 order-last">
                                <h3>Productos</h3>
                                <p class="text-subtitle text-muted">Ver, modificar, eliminar productos.</p>
                                 <a asp-controller="Producto" asp-action="Create" class="btn btn-success">Crear producto</a>
                                 <br>
                            </div>
                            <div class="col-12 col-md-6 order-md-2 order-first">
                                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                                    <ol class="breadcrumb">
                                        <li class="breadcrumb-item"><a href="index.html">Dashboard</a></li>
                                        <li class="breadcrumb-item active" aria-current="page">Products</li>
                                    </ol>
                                </nav>
                            </div>
                        </div>
                    </div>

                
                <section class="basic-choices">
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-2">
                                            <h6>Productos</h6>
                                            <div class="form-group">
                                                <form method="post" asp-action="Cart" asp-controller="Orden">
                                                <select class="choices form-select">
                                                    @foreach (var item in ViewBag.Productos)
                                                     {
                                                        <option value=@item.Id>@item.Nombre</option>
                                                    }
                                                </select>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
                
                @if (Model.Count() > 0)
                {
                <section class="section">
                    <div class="card">
                        <div class="card-body">
                            <h3>Productos seleccionados</h3>
                            <table class="table table-striped" id="table1">
                                <thead>
                                    <tr>
                                        <th>Nombre</th>
                                        <th>Tipo</th>
                                        <th>Precio</th>
                                        <th>Cantidad</th>
                                        <th>Acción</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        @*<input type="hidden" name="id" value=@oc>
                                        <input type="hidden" name="idprod" value=@item.Id>*@
                                        <tr>
                                                
                                                <td>@item.IdProductoNavigation.Nombre</td>
                                                <td>@item.IdProductoNavigation.TipoProducto</td>
                                                <td>@item.IdProductoNavigation.PrecioCompra</td>
                                                <td>@item.Cantidad</td>
                                                <td>
                                                    <a class="btn btn-success" asp-controller="Orden" asp-action="Cart" asp-route-id=@oc asp-route-idp="@item.Id" asp-route-cantidad="Cantidad"><i class="fa-solid fa-pen-to-square"></i></a>
                                                    @*<a class="btn btn-danger"><i class="fa-solid fa-trash-can"></i></a>*@
                                                </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>

                </section>
        
           }else{
                
            }
            </div>
</div>
        
    
        <script src="~/css/css-emp/vendors/simple-datatables/simple-datatables.js"></script>
        <script>
            // Simple Datatable
            let table1 = document.querySelector('#table1');
            let dataTable = new simpleDatatables.DataTable(table1);
        </script>
        <script src="assets/vendors/perfect-scrollbar/perfect-scrollbar.min.js"></script>
        <script src="assets/js/bootstrap.bundle.min.js"></script>

        <!-- Include Choices JavaScript -->
        <script src="assets/vendors/choices.js/choices.min.js"></script>
        <script src="assets/js/main.js"></script>

